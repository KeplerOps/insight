{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "build",
        "rootDir": ".",
        "declaration": true,
        "sourceMap": true
    },
    "include": ["src/**/*", "__tests__/**/*"],
    "exclude": ["node_modules", "build"]
}
